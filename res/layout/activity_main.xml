<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/search_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Lookup" />

    <EditText
        android:id="@+id/search_query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/search_btn"
        android:layout_alignBottom="@+id/search_btn"
        android:layout_toLeftOf="@+id/search_btn"
        android:ems="10"
        android:inputType="textPersonName" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/make_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/search_btn"
        android:layout_below="@+id/search_btn"
        android:layout_marginTop="36dp"
        android:text="Call" />

    <Button
        android:id="@+id/make_dial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/make_call"
        android:layout_alignRight="@+id/make_call"
        android:layout_below="@+id/make_call"
        android:layout_marginTop="20dp"
        android:text="Dial" />

    <Button
        android:id="@+id/image_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/make_dial"
        android:layout_alignRight="@+id/make_dial"
        android:layout_below="@+id/make_dial"
        android:layout_marginTop="27dp"
        android:text="Pick Image" />

    <Button
        android:id="@+id/flash_light_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/image_picker"
        android:layout_alignRight="@+id/image_picker"
        android:layout_below="@+id/image_picker"
        android:layout_marginTop="34dp"
        android:text="Flash Light" />
     
     <Button
        android:id="@+id/send_msn_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/flash_light_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/flash_light_btn"
        android:text="Send Message" />	
	
</RelativeLayout>