<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SendMessage" >

    <Button
        android:id="@+id/go_back"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/intent_send"
        android:layout_marginTop="50dp"
        android:text="Back" />

    <Button
        android:id="@+id/intent_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_tobe_send"
        android:layout_alignParentTop="true"
        android:layout_marginTop="129dp"
        android:text="Send" />

    <EditText
        android:id="@+id/text_tobe_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/intent_send"
        android:layout_alignLeft="@+id/go_back"
        android:layout_marginBottom="68dp"
        android:ems="10"
        android:inputType="textMultiLine" />
	
</RelativeLayout>